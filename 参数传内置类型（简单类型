public class ShuZu {
    public static void main(String[] args) {
        int[] arr = {1,2,3,4};
        func(arr);
        System.out.println("arr[0] = " + arr[0]);
    }
//运行结果 a[0] = 10;   arr[0] = 10;   两个引用同时指向一块内存
    public static void func(int[] a) {
        a[0] = 10;
        System.out.println("a[0] = " + a[0]);
    }
}
